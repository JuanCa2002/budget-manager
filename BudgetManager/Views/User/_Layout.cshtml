<!-- Layout User Without Login -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Administrador de Presupuestos</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BudgetManager.styles.css" asp-append-version="true" />
</head>
<body style="margin:0;">

    <!-- Application Body -->
    <div class="container">
        <div class="row align-items-center" style="height: 100vh;">
            <div class="col" style="margin-right: 2rem;">
                <h2 class="text-center">
                    Administrador de Presupuestos
                </h2>
                <h5 class="text-center">¡Donde manejar tus finanzas es mucho mas facil!</h5>
            </div>
            <main role="main" class="pb-3 col">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-ui/jquery-ui.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
