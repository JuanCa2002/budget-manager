@using BudgetManager.Models.Enums
@using BudgetManager.Models.ViewModels

@model MonthlyReportViewModel

@{
    ViewData["Title"] = "Reporte Mensual";

    int previousYear = Model.Year - 1;
    int nextYear = Model.Year + 1;

    var totalsModel = new TotalsSummaryViewModel()
    {
        IncomeBalance = Model.IncomeBalance,
        OutcomeBalance = Model.OutcomeBalance,
        TotalBalance = Model.TotalBalance
    };
}

<partial name="_Submenu" model="TransactionsSubmenu.Monthly"></partial>

<h4 class="my-5">
    <span>Mostrando Transacciones de :</span>
    <a asp-route-year="@previousYear" class="btn btn-primary ml-5">
        <i class="bi-chevron-left"></i>
    </a>

    <span class="mx-4">@Model.Year</span>

    <a asp-route-year="@nextYear" class="btn btn-primary">
        <i class="bi-chevron-right"></i>
    </a>
</h4>

<partial name="_TotalsSummary" model="@totalsModel"></partial>

<table class="table" style="font-size: 20px">
    <thead>
        <tr style="background-color: lightblue !important">
            <th>Mes</th>
            <th style="text-align: right;">Ingresos</th>
            <th style="text-align: right;">Egresos</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var transactionByMonth in Model.TransactionsByMonth)
        {
            <tr>
                <td>
                    <a style="text-decoration: none;" asp-action="Index" 
                        asp-route-year="@Model.Year" asp-route-month="@transactionByMonth.Month">
                        @transactionByMonth.ReferenceDate.ToString("MMM")
                    </a>
                </td>
                <td class="active" style="text-align: right;">
                    @transactionByMonth.IncomeBalance.ToString("N")
                </td>
                <td class="passive" style="text-align: right;">
                    @transactionByMonth.OutcomeBalance.ToString("N")
                </td>
            </tr>
        }
    </tbody>
</table>